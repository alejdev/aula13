{
  "hosting": [{
      "target": "dev",
      "public": "dist/dev",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [{
        "source": "**",
        "destination": "/index.html"
      }]
    },
    {
      "target": "prod",
      "public": "dist/prod",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [{
        "source": "**",
        "destination": "/index.html"
      }],
      "headers": [{
        "source": "*.@(*.css|js)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      }, {
        "source": "**/*.@(*)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      }, {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      }]
    }
  ]
}
